<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <title>Home</title>
</head>

<body>
    <div class="main-background"></div>
    <header>
        <nav class="manage-nav">
            <div class="back-btn" onclick="()=> window.location.href = document.referrer">
                <i class="fa-solid fa-chevron-left"></i>
                <span>Trở lại</span>
            </div>
            <div class="logo-image d-flex justify-content-center align-items-center">
                <a href="">
                    <img src="~/images/logo.png" alt="PoolCom">
                    <span class="">PoolCom</span>
                </a>
            </div>
            
        </nav>
    </header>

    @RenderBody()

    <div class="confirm-popup d-none">
        <div class="confirm-content">
            <div class="confirm-title">
                Kết quả của bạn vẫn chưa được lưu!
            </div>
            <div class="d-flex justify-content-around">
                <div class="exit-btn">
                    <a asp-action="Index" asp-controller="Home">
                    <i class="fa-solid fa-circle-xmark"></i>
                    Vẫn thoát
                    </a>
                </div>
                <div class="save-random">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Ở lại trang
                </div>
            </div>
        </div>
    </div>

</body>

</html>