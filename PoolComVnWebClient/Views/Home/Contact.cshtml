@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    string email = HttpContextAccessor.HttpContext.Request.Cookies["Email"];
}
@model PoolComVnWebClient.DTO.ContactDTO
<div class="container">
    <div class="contact-body d-flex">
        <div class="contact-form col-lg-6">
            <form class="" method="POST" asp-action="AddContact" asp-controller="Home" >
                <div class="form-input">
                    <div class="input-title">Họ và tên</div>
                    <input class="input-text mt-2 col-12" type="text" name="Name" required>
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
                </div>
                <div class="form-input">
                    <div class="input-title">Email của bạn</div>
                    <input class="input-text mt-2 col-12" type="email" name="Email" placeholder="example@gmail.com.vn" value="@email" required>
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Email)</span>
                </div>
                <div class="form-input">
                    <div class="input-title">Tin nhắn</div>
                    <textarea class="input-text col-12 mt-2" rows="3" name="Message" required></textarea>
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Message)</span>
                </div>
                <div class="form-input d-flex justify-content-center">
                    <input class="submit-btn col-8" type="submit" value="Gửi hỗ trợ" />
                </div>
            </form>
            <div id="contactResult">
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
            </div>
            <div class="contact-tag">
                <i class="fa-regular fa-envelope-open"></i>
            </div>
        </div>
        <div class="contact-info col-lg-6 d-flex justify-content-center">
            <div class="px-3">
                <div class="d-flex my-5">
                    <div class="contact-icon d-flex justify-content-center align-items-center">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div class="contact-description d-flex align-items-center">
                        Group 16<br>
                        From FPT University.
                    </div>
                </div>
                <div class="d-flex my-5">
                    <div class="contact-icon d-flex justify-content-center align-items-center">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="contact-description d-flex align-items-center">
                        +84 923459456
                    </div>
                </div>
                <div class="d-flex my-5">
                    <div class="contact-icon d-flex justify-content-center align-items-center">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div class="contact-description d-flex align-items-center">
                        poolcomvn@gmail.com
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
